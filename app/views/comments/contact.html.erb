<%= image_tag("contact-us.png") %>

<hr class="dotted"/>

<div class="row">
  <div class="span12">
    <p>Questions, comments or feedback?  Send an inquiry to the SportyChickApparel team.</p>
    <br/> 
   
    <div id="form-container">
      <%= form_for(@comment) do |f| %>
        <%= render 'shared/error_messages' %>

        <%= f.label :name, "Your Name: " %>
        <%= f.text_field :name %>

        <%= f.label :email, "E-mail Address: " %>
        <%= f.text_field :email %>

        <%= f.label :content %>
        <%= f.text_area :content, :size => "20x3", :style => "width: 300px;" %>
         
        <br/> 
        <%= f.submit "Submit", :class => "btn btn-primary"%>
      <% end %>
    </div> <!-- end form-container -->
 
  </div>
</div>
