<%= form_tag("/shopping/filter", remote: true, id: "filter-form", autocomplete: 'off') do |f| %>
  <%= hidden_field_tag "base_filter", @base_filter %>
  <%= hidden_field_tag "base_filter_id", @base_filter_id %>

  <% if @base_filter == "Brands" or @base_filter == "Sports" or @base_filter == "Fan Gear" %>
    <%= render 'shopping/apparel_filter' %>
  <% end %>

  <% if @base_filter == "Apparel" or @base_filter == "Sports" or @base_filter == "Fan Gear" %> 
    <%= render 'shopping/brand_filter' %>
  <% end %>

  <% if @base_filter == "Apparel" or @base_filter == "Brands" or @base_filter == "Fan Gear" %>
    <%= render 'shopping/sport_filter' %>  
  <% end %>

<% end %>
