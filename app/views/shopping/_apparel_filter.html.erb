<!-- apparel -->
<ul class="no-bullets radio-container coolshadow minimizable">
  <li class="header pretty-button">
    <h5>Apparel</h5>
    <span class="expand"><i class="icon-minus icon-white"></i></span>
  </li>

  <li class="button-holder">
    <ul class="no-bullets">
      <% @items.map{ |i| i.apparel }.uniq.each do |apparel| %>
        <li>
          <%= check_box_tag "apparel[]", apparel.id, false, :class => 'checkable', :id => "apparel_#{apparel.id}" %>
          <%= label_tag "apparel_#{apparel.id}", apparel.name.titleize, :style => "display:inline;" %>
        </li>
      <% end %>
    </ul>
  </li>
</ul>
<!-- end apparel -->
